<Window x:Class="xOpenTerm.MasterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="主密码" Height="380" Width="380" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="{StaticResource BgDark}" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" x:Name="ConfirmRow"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleText" Text="设置主密码" Foreground="{StaticResource TextPrimary}" FontSize="15" Margin="0,0,0,12"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="主密码" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
            <PasswordBox x:Name="PasswordBox" Padding="8" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,8" x:Name="ConfirmPanel">
            <TextBlock Text="确认主密码" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
            <PasswordBox x:Name="ConfirmBox" Padding="8" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"/>
        </StackPanel>
        <TextBlock x:Name="HintText" Grid.Row="3" Foreground="{StaticResource TextPrimary}" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,8,0,0" Opacity="0.9"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkBtn" Content="确定" Style="{StaticResource PrimaryButtonStyle}" Width="80" Padding="8,5" Margin="0,0,8,0" IsDefault="True" Click="OkBtn_Click"/>
            <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="8,5" Margin="0,0,8,0" IsCancel="True" Click="CancelBtn_Click"/>
            <Button x:Name="DontRemindBtn" Content="不再提醒" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="8,5" Click="DontRemindBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
