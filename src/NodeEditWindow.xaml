<Window x:Class="xOpenTerm2.NodeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="节点设置" Height="520" Width="460" WindowStartupLocation="CenterOwner"
        Background="#1a1a2e" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="名称" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="NameBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="类型" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <ComboBox x:Name="TypeCombo" Width="120" Padding="4"/>
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="ConfigLabel" Text="连接配置" Foreground="#94a3b8" Margin="0,8,0,6"/>
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ConfigPanel">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="主机" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <TextBox x:Name="HostBox" Width="260" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="端口" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <TextBox x:Name="PortBox" Width="80" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="用户名" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <TextBox x:Name="UsernameBox" Width="260" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="认证" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <ComboBox x:Name="AuthCombo" Width="120" Padding="4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="PasswordRow">
                    <TextBlock Text="密码" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <PasswordBox x:Name="PasswordBox" Width="260" Padding="6" Background="#1e293b" Foreground="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="KeyRow" Visibility="Collapsed">
                    <TextBlock Text="私钥路径" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <TextBox x:Name="KeyPathBox" Width="220" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="CredentialRow" Visibility="Collapsed">
                    <TextBlock Text="登录凭证" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <ComboBox x:Name="CredentialCombo" Width="260" Padding="4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="TunnelRow" Visibility="Collapsed">
                    <TextBlock Text="跳板机" Width="80" VerticalAlignment="Top" Foreground="#e2e8f0" Margin="0,6,0,0"/>
                    <StackPanel>
                        <ListBox x:Name="TunnelListBox" Height="72" Background="#1e293b" Foreground="#e2e8f0" SelectionMode="Multiple"/>
                        <Button x:Name="TunnelManageBtn" Content="管理…" Margin="0,4,0,0" Padding="6,2" Click="TunnelManageBtn_Click"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="DomainRow" Visibility="Collapsed">
                    <TextBlock Text="域" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <TextBox x:Name="DomainBox" Width="260" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="TestConnectionRow" Visibility="Collapsed">
                    <Button x:Name="TestConnectionBtn" Content="测试连接" Width="90" Padding="6,4" Click="TestConnectionBtn_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="ProtocolRow" Visibility="Collapsed">
                    <TextBlock Text="协议" Width="80" VerticalAlignment="Center" Foreground="#e2e8f0"/>
                    <ComboBox x:Name="ProtocolCombo" Width="120" Padding="4"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="SaveBtn" Content="保存" Width="80" Padding="8,4" Margin="0,0,8,0" Click="SaveBtn_Click"/>
            <Button Content="取消" Width="80" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
