<Window x:Class="xOpenTerm.PortScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="端口扫描" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="{StaticResource BgDark}" ResizeMode="CanResizeWithGrip"
        MinHeight="500" MinWidth="700">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 端口预设（新增管理按钮） -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="常用端口预设：" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
            <ComboBox x:Name="PresetCombo" Width="200" Padding="6,4"
                      Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                      BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                      SelectionChanged="PresetCombo_SelectionChanged"/>
            <!-- 新增：管理预设按钮 -->
            <Button Content="管理预设..." ToolTip="管理端口预设方案（添加、编辑、删除）"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="8,4" Margin="8,0,0,0" Click="ManagePresetsBtn_Click"/>
        </StackPanel>

        <!-- 端口范围输入（带历史记录） -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="端口范围：" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>

            <!-- 可编辑的ComboBox（支持手动输入和历史选择） -->
            <ComboBox x:Name="PortsCombo" Grid.Column="1" IsEditable="True"
                      Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                      BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                      Padding="6,4" StaysOpenOnEdit="True"
                      KeyDown="PortsCombo_KeyDown"/>

            <!-- 清除历史按钮 -->
            <Button Grid.Column="2" Content="清除历史" ToolTip="清除端口范围历史记录"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="8,4" Margin="8,0,0,0" Click="ClearHistoryBtn_Click"/>
        </Grid>

        <!-- 扫描模式与高级设置 -->
        <Border Grid.Row="2" Background="{StaticResource BgInput}" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" Padding="12" Margin="0,0,0,12" CornerRadius="{StaticResource RadiusSm}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 扫描模式 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="扫描模式：" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <RadioButton x:Name="DeepScanRadio" Content="深度扫描（识别服务）"
                                     Foreground="{StaticResource TextPrimary}"
                                     IsChecked="True" Margin="0,0,0,4"
                                     ToolTip="发送探测包获取服务banner，准确识别服务类型（较慢）"/>
                        <RadioButton x:Name="QuickScanRadio" Content="快速扫描（仅检测开放）"
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,0,0,4"
                                     ToolTip="仅检测端口是否开放，服务标注基于端口号（较快）"/>
                    </StackPanel>
                </StackPanel>

                <!-- 超时与并发 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="超时(秒)：" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                    <TextBox x:Name="TimeoutBox" Width="50" VerticalAlignment="Center"
                             Style="{StaticResource DialogTextBoxStyle}" Text="2" Margin="0,0,16,0"/>
                    <TextBlock Text="并发端口数：" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                    <TextBox x:Name="ConcurrencyBox" Width="50" VerticalAlignment="Center"
                             Style="{StaticResource DialogTextBoxStyle}" Text="50"
                             ToolTip="单个节点同时扫描的端口数量（1-1000）"/>
                </StackPanel>

                <!-- 保存配置选项 -->
                <CheckBox x:Name="SaveConfigCheckBox" Grid.Row="1" Grid.Column="0"
                          Content="保存为默认配置" Foreground="{StaticResource TextSecondary}"
                          IsChecked="True" Margin="0,4,0,0"
                          ToolTip="将当前设置保存为下次扫描的默认配置"/>
            </Grid>
        </Border>

        <!-- 开始/停止按钮 -->
        <Button x:Name="StartBtn" Grid.Row="3" Content="开始扫描"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Left" Padding="16,6" Click="StartBtn_Click"/>

        <!-- 进度 -->
        <TextBlock x:Name="ProgressText" Grid.Row="4" Text=""
                   Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" Margin="0,8,0,4"
                   Visibility="Collapsed"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="4" Height="6" Margin="0,0,0,8"
                     Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>

        <!-- 结果 -->
        <Border Grid.Row="5" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                CornerRadius="4" Margin="0,0,0,12" Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Padding="8">
                <StackPanel x:Name="ResultPanel"/>
            </ScrollViewer>
        </Border>

        <!-- 取消/关闭 -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                    Width="80" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
