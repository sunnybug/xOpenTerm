<Window x:Class="xOpenTerm.PortScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="端口扫描" Height="560" Width="760"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="{StaticResource BgDark}" ResizeMode="CanResizeWithGrip"
        MinHeight="420" MinWidth="640">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="180"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 第一行：预设 + 端口范围（合并为一行紧凑布局） -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="预设：" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}" Margin="0,0,6,0"/>
            <ComboBox x:Name="PresetCombo" Grid.Column="1" Padding="4,3"
                      Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                      BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                      SelectionChanged="PresetCombo_SelectionChanged"/>
            <Button Grid.Column="2" Content="管理预设" ToolTip="管理端口预设方案"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="6,3" Margin="6,0,0,0" Click="ManagePresetsBtn_Click"/>
            <TextBlock Grid.Column="3" Text="端口范围：" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}" Margin="12,0,6,0"/>
            <ComboBox x:Name="PortsCombo" Grid.Column="4" IsEditable="True"
                      Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                      BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                      Padding="4,3" StaysOpenOnEdit="True" KeyDown="PortsCombo_KeyDown"/>
            <Button Grid.Column="5" Content="清除历史" ToolTip="清除端口范围历史记录"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="6,3" Margin="6,0,0,0" Click="ClearHistoryBtn_Click"/>
        </Grid>

        <!-- 第二行：扫描模式 + 超时/并发 + 保存配置（单行） -->
        <Border Grid.Row="1" Background="{StaticResource BgInput}" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" Padding="8,6" Margin="0,0,0,6" CornerRadius="{StaticResource RadiusSm}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="模式：" VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}" Margin="0,0,6,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton x:Name="DeepScanRadio" Content="深度" Foreground="{StaticResource TextPrimary}"
                                 IsChecked="True" Margin="0,0,12,0"
                                 ToolTip="识别服务类型（较慢）"/>
                    <RadioButton x:Name="QuickScanRadio" Content="快速" Foreground="{StaticResource TextPrimary}"
                                 ToolTip="仅检测开放（较快）"/>
                </StackPanel>
                <TextBlock Grid.Column="2" Text="超时(s)：" VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}" Margin="8,0,4,0"/>
                <TextBox x:Name="TimeoutBox" Grid.Column="3" Width="36" VerticalAlignment="Center"
                         Style="{StaticResource DialogTextBoxStyle}" Text="2" Padding="4,2"/>
                <TextBlock Grid.Column="4" Text="并发：" VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}" Margin="12,0,4,0"/>
                <TextBox x:Name="ConcurrencyBox" Grid.Column="5" Width="36" VerticalAlignment="Center"
                         Style="{StaticResource DialogTextBoxStyle}" Text="50" Padding="4,2"
                         ToolTip="同时扫描端口数（1-1000）"/>
                <CheckBox x:Name="SaveConfigCheckBox" Grid.Column="6" VerticalAlignment="Center"
                          Content="保存为默认" Foreground="{StaticResource TextSecondary}"
                          IsChecked="True" Margin="12,0,0,0"
                          ToolTip="保存当前设置为默认"/>
            </Grid>
        </Border>

        <!-- 目标与扫描结果（合并） -->
        <Border Grid.Row="2" Background="{StaticResource BgInput}" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" Padding="6,4" Margin="0,0,0,6" CornerRadius="{StaticResource RadiusSm}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="80"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="目标与扫描结果：" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,6,0"/>
                    <Button x:Name="TargetAddBtn" Content="添加" Style="{StaticResource SecondaryButtonStyle}"
                            Padding="6,3" Margin="0,0,4,0" Click="TargetAddBtn_Click"
                            ToolTip="添加要扫描的目标"/>
                    <Button x:Name="TargetEditBtn" Content="编辑" Style="{StaticResource SecondaryButtonStyle}"
                            Padding="6,3" Margin="0,0,4,0" Click="TargetEditBtn_Click"
                            ToolTip="编辑选中目标"/>
                    <Button x:Name="TargetRemoveBtn" Content="删除" Style="{StaticResource SecondaryButtonStyle}"
                            Padding="6,3" Click="TargetRemoveBtn_Click"
                            ToolTip="移除选中目标"/>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="MergedPanel"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 开始按钮 + 进度 -->
        <Grid Grid.Row="3" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="StartBtn" Grid.Column="0" Content="开始扫描"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Padding="12,5" Click="StartBtn_Click"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                <TextBlock x:Name="ProgressText" Text="" Foreground="{StaticResource TextSecondary}"
                           TextWrapping="Wrap" Visibility="Collapsed"/>
                <ProgressBar x:Name="ProgressBar" Height="4" Margin="0,2,0,0"
                             Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- 取消/关闭 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
            <Button x:Name="CancelBtn" Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                    Width="72" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
