<Window x:Class="xOpenTerm.TencentCloudGroupAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新增腾讯云组" Height="280" Width="440" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="#1a1a2e" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="填写腾讯云 API 密钥后，将拉取并导入所有地域的 CVM 实例，按 机房→项目→服务器 构建节点树。" 
                   Foreground="#94a3b8" TextWrapping="Wrap" Margin="0,0,0,12"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6">
            <TextBlock Text="组名称" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="NameBox" Text="腾讯云" Width="320" Padding="6,4" Background="#1e293b" Foreground="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,6">
            <TextBlock Text="SecretId" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="SecretIdBox" Width="320" Padding="6,4" Background="#1e293b" Foreground="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="SecretKey" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <PasswordBox x:Name="SecretKeyBox" Width="320" Padding="6,4" Background="#1e293b" Foreground="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkBtn" Content="确定" Style="{StaticResource PrimaryButtonStyle}" Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" Click="OkBtn_Click"/>
            <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
