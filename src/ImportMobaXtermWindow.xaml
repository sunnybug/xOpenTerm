<Window x:Class="xOpenTerm.ImportMobaXtermWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:xOpenTerm.Services"
        Title="导入 MobaXterm 会话" Height="420" Width="620" WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgDark}" ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="IniPathBox" IsReadOnly="True" Width="380" Padding="6,4" Margin="0,0,8,0"
                     Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                     BorderBrush="{StaticResource BorderBrush}" VerticalAlignment="Center"/>
            <Button x:Name="BrowseBtn" Content="选择 MobaXterm.ini…" Padding="8,4" Click="BrowseBtn_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="以目录为单位勾选要导入的会话，确定后将按 MobaXterm 中的目录结构导入。" 
                   Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" Margin="0,0,0,8"/>
        <TreeView x:Name="FolderTree" Grid.Row="2"
                  Background="{StaticResource BgSidebar}" Foreground="{StaticResource TextPrimary}"
                  BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type svc:MobaFolderNode}" ItemsSource="{Binding SubFolders}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkBtn" Content="确定" Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" Click="OkBtn_Click" IsEnabled="False"/>
            <Button Content="取消" Width="80" Padding="8,4" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
