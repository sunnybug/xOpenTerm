<Window x:Class="xOpenTerm.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="检查更新" Height="260" Width="400" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="#1a1a2e" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="StatusText" Grid.Row="0" Foreground="#e2e8f0" TextWrapping="Wrap" Margin="0,0,0,12"/>
        <TextBlock x:Name="DetailText" Grid.Row="1" Foreground="#94a3b8" TextWrapping="Wrap" Visibility="Collapsed"/>
        <StackPanel x:Name="ProgressPanel" Grid.Row="2" Visibility="Collapsed" Margin="0,0,0,8">
            <ProgressBar x:Name="ProgressBar" Height="8" Minimum="0" Maximum="100" Value="0"/>
            <TextBlock x:Name="ProgressText" Foreground="#94a3b8" Margin="0,4,0,0" FontSize="12"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="DirectUpdateBtn" Content="直接更新" Style="{StaticResource PrimaryButtonStyle}" Width="90" Padding="6,4" Margin="0,0,8,0" Click="DirectUpdateBtn_Click" Visibility="Collapsed"/>
            <Button x:Name="OpenReleasePageBtn" Content="打开发布页" Style="{StaticResource SecondaryButtonStyle}" Width="90" Padding="6,4" Margin="0,0,8,0" Click="OpenReleasePageBtn_Click" Visibility="Collapsed"/>
            <Button x:Name="RetryBtn" Content="重试" Style="{StaticResource SecondaryButtonStyle}" Width="70" Padding="6,4" Margin="0,0,8,0" Click="RetryBtn_Click" Visibility="Collapsed"/>
            <Button Content="关闭" Style="{StaticResource SecondaryButtonStyle}" Width="70" Padding="6,4" IsCancel="True" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
