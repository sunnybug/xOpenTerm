<Application x:Class="xOpenTerm2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="BgSidebar" Color="#16213e"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#333"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#e2e8f0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94a3b8"/>
        <SolidColorBrush x:Key="Accent" Color="#3b82f6"/>
        <SolidColorBrush x:Key="HoverBg" Color="#334155"/>

        <!-- 菜单项文字颜色统一 -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Application.Resources>
</Application>
