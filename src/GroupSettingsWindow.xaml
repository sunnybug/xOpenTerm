<Window x:Class="xOpenTerm.GroupSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="分组默认设置" Height="320" Width="400" WindowStartupLocation="CenterOwner"
        Background="#1a1a2e" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="子节点选择「同父节点」时将使用以下默认值，仅保存于本分组，不会写入子节点。" 
                   Foreground="#94a3b8" TextWrapping="Wrap" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="默认认证凭证" Width="100" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <ComboBox x:Name="CredentialCombo" Width="240" Padding="6" Background="#1e293b" Foreground="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="默认跳板" VerticalAlignment="Top" Foreground="#e2e8f0" Margin="0,0,0,6"/>
            <ListBox x:Name="TunnelListBox" Height="120" Background="#1e293b" Foreground="#e2e8f0" SelectionMode="Multiple"/>
            <Button x:Name="TunnelManageBtn" Content="管理隧道…" Margin="0,6,0,0" Padding="6,2" Click="TunnelManageBtn_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="SaveBtn" Content="保存" Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" Click="SaveBtn_Click"/>
            <Button Content="取消" Width="80" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
