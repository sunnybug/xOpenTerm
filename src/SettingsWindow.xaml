<Window x:Class="xOpenTerm.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="字体" Height="480" Width="460" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="{StaticResource BgDark}" ResizeMode="CanResize" MinHeight="420" MinWidth="420">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- 界面字体与预览（同一方框） -->
        <Border Grid.Row="0" Background="{StaticResource BgInput}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="14,12" Margin="0,0,0,14" CornerRadius="{StaticResource RadiusMd}">
            <StackPanel>
                <TextBlock Text="界面字体" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="字体" Width="64" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <ComboBox x:Name="InterfaceFontCombo" Width="220" Padding="6,4" IsEditable="True"
                              Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"/>
                    <TextBlock Text="大小" Width="36" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" Margin="12,0,4,0"/>
                    <ComboBox x:Name="InterfaceSizeCombo" Width="72" Padding="6,4"
                              Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"/>
                </StackPanel>
                <TextBlock Text="预览" Foreground="{StaticResource TextPrimary}" Margin="0,4,0,6" FontWeight="SemiBold"/>
                <Border Background="{StaticResource BgDark}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="10,8" CornerRadius="{StaticResource RadiusSm}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="界面：" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="InterfacePreview" Foreground="{StaticResource TextPrimary}"
                                   Text="菜单 服务器 远程文件 设置 帮助"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <!-- PuTTY 设置说明（分步 + 方框） -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <Button x:Name="PuttyFontBtn" Content="在 PuTTY 中设置字体…" Padding="8,4" Click="PuttyFontBtn_Click"
                    ToolTip="打开 PuTTY 配置窗口"/>
        </StackPanel>
        <Border Grid.Row="2" Background="{StaticResource BgInput}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="14,12" Margin="0,0,0,14" CornerRadius="{StaticResource RadiusMd}">
            <StackPanel>
                <TextBlock Text="PuTTY 字体设置步骤：" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,4">
                    <Run Text="1. " FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    <Run Text="点击上方「在 PuTTY 中设置字体…」按钮，打开 PuTTY 配置窗口。"/>
                </TextBlock>
                <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,4">
                    <Run Text="2. " FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    <Run Text="左侧选择 Window → Appearance，点击 Font settings 旁的 Change…，选择字体和字号。"/>
                </TextBlock>
                <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,0">
                    <Run Text="3. " FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    <Run Text="若希望新建连接均生效：左侧选 Session，选中 Default Settings，点 Save。"/>
                </TextBlock>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkBtn" Content="确定" Width="84" Padding="10,6" Margin="0,0,10,0" Click="OkBtn_Click" IsDefault="True"/>
            <Button Content="取消" Width="84" Padding="10,6" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
