<Window x:Class="xOpenTerm.CredentialEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="编辑凭证" Height="320" Width="400" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="{StaticResource BgDark}" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="名称" Width="72" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <TextBox x:Name="NameBox" Width="260" Padding="6" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}" CaretBrush="{StaticResource TextPrimary}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="用户名" Width="72" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <TextBox x:Name="UsernameBox" Width="260" Padding="6" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}" CaretBrush="{StaticResource TextPrimary}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="认证" Width="72" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <ComboBox x:Name="AuthCombo" Width="120" Padding="4"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8" x:Name="PasswordRow">
            <TextBlock Text="密码" Width="72" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <PasswordBox x:Name="PasswordBox" Width="260" Padding="6" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8" x:Name="KeyRow" Visibility="Collapsed">
            <TextBlock Text="私钥路径" Width="72" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
            <TextBox x:Name="KeyPathBox" Width="260" Padding="6" Background="{StaticResource BgInput}" Foreground="{StaticResource TextPrimary}" CaretBrush="{StaticResource TextPrimary}"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="SaveBtn" Content="保存" Width="70" Padding="6,4" Margin="0,0,8,0" IsDefault="True" Click="SaveBtn_Click"/>
            <Button Content="取消" Width="70" Padding="6,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
