<Window x:Class="xOpenTerm.TunnelEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑跳板机" Height="320" Width="420" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="#1a1a2e" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="名称" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="NameBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="主机" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="HostBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="端口" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="PortBox" Width="80" MaxLength="5" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="用户名" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="UsernameBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="认证" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <ComboBox x:Name="AuthCombo" Width="120" Padding="4"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,8" x:Name="CredentialRow" Visibility="Collapsed">
            <TextBlock Text="登录凭证" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <ComboBox x:Name="CredentialCombo" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,8" x:Name="PasswordRow">
            <TextBlock Text="密码" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <PasswordBox x:Name="PasswordBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,8" x:Name="KeyRow" Visibility="Collapsed">
            <TextBlock Text="私钥路径" Width="72" VerticalAlignment="Center" Foreground="#e2e8f0"/>
            <TextBox x:Name="KeyPathBox" Width="280" Padding="6" Background="#1e293b" Foreground="#e2e8f0" CaretBrush="#e2e8f0"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="TestBtn" Content="测试连接" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="6,4" Margin="0,0,8,0" Click="TestBtn_Click"/>
            <Button x:Name="SaveBtn" Content="保存" Style="{StaticResource PrimaryButtonStyle}" Width="70" Padding="6,4" Margin="0,0,8,0" Click="SaveBtn_Click"/>
            <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}" Width="70" Padding="6,4" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
