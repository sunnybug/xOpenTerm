<Window x:Class="xOpenTerm.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于" Height="280" Width="380" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="{StaticResource BgDark}" ResizeMode="NoResize">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock x:Name="AppNameText" Text="xOpenTerm" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
            <TextBlock Text="版本：" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,2"/>
            <TextBlock x:Name="VersionText" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>
            <TextBlock Text="作者" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,2"/>
            <TextBlock x:Name="AuthorText" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
            <TextBlock Margin="0,4,0,16">
                <Hyperlink x:Name="GitHubLink" RequestNavigate="GitHubLink_RequestNavigate" Foreground="{StaticResource Accent}">GitHub</Hyperlink>
            </TextBlock>
            <Button Content="确定" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="8,4" HorizontalAlignment="Right" IsCancel="True" Click="OkBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
