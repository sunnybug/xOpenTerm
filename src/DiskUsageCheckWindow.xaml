<Window x:Class="xOpenTerm.DiskUsageCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="磁盘占用检查" Height="480" Width="640"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="{StaticResource BgDark}" ResizeMode="CanResizeWithGrip"
        MinHeight="360" MinWidth="500">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- 阈值 + 开始 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="占用率阈值 (%)：" VerticalAlignment="Center"
                       Foreground="{StaticResource TextPrimary}" Margin="0,0,8,0"/>
            <TextBox x:Name="ThresholdBox" Width="60" VerticalAlignment="Center"
                     Style="{StaticResource DialogTextBoxStyle}" Text="85"/>
            <TextBlock Text="超过此阈值的节点将列出并采集大文件/目录" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}" Margin="12,0,0,0"/>
            <Button x:Name="StartBtn" Content="开始检查" Style="{StaticResource PrimaryButtonStyle}"
                    Margin="16,0,0,0" Padding="12,6" Click="StartBtn_Click"/>
        </StackPanel>
        <!-- 进度 -->
        <TextBlock x:Name="ProgressText" Grid.Row="1" Text=""
                   Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" Margin="0,0,0,8"
                   Visibility="Collapsed"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="2" Height="6" Margin="0,0,0,8"
                     Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
        <!-- 结果 -->
        <Border Grid.Row="3" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                CornerRadius="4" Margin="0,0,0,12" Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Padding="8">
                <StackPanel x:Name="ResultPanel"/>
            </ScrollViewer>
        </Border>
        <!-- 取消/关闭 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                    Width="80" Padding="8,4" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
