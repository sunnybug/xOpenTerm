<Window x:Class="xOpenTerm.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="登录凭证" Height="420" Width="520" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="{StaticResource BgDark}" ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddBtn" Content="新增" Width="76" Padding="8,6" Margin="0,0,8,0" Click="AddBtn_Click"/>
            <Button x:Name="EditBtn" Content="编辑" Width="76" Padding="8,6" Margin="0,0,8,0" Click="EditBtn_Click" IsEnabled="False"/>
            <Button x:Name="DelBtn" Content="删除" Width="76" Padding="8,6" Click="DelBtn_Click" IsEnabled="False"/>
        </StackPanel>
        <Border Grid.Row="1" Background="{StaticResource BgSidebar}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="{StaticResource RadiusMd}" Padding="0">
            <ListBox x:Name="CredList" Background="Transparent" Foreground="{StaticResource TextPrimary}"
                     BorderThickness="0" SelectionChanged="CredList_SelectionChanged"
                     MouseDoubleClick="CredList_MouseDoubleClick"/>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="关闭" Width="76" Padding="8,6" IsCancel="True" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
