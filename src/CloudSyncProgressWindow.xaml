<Window x:Class="xOpenTerm.CloudSyncProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="云同步" Height="380" Width="520" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Background="#1a1a2e" ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing" MinHeight="280" MinWidth="420">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="StatusText" Grid.Row="0" Text="正在拉取实例列表…"
                   Foreground="#e2e8f0" TextWrapping="Wrap" Margin="0,0,0,8"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="8" Margin="0,0,0,8"
                     Minimum="0" Maximum="100" Value="0"/>
        <TextBlock x:Name="DetailText" Grid.Row="2" Text="" Foreground="#94a3b8"
                   TextWrapping="Wrap" Margin="0,0,0,8" Visibility="Collapsed"/>
        <Border Grid.Row="3" BorderBrush="#334155" BorderThickness="1" CornerRadius="4" Margin="0,0,0,12"
                Visibility="Collapsed" x:Name="DetailListPanel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="变动列表" Foreground="#94a3b8" FontWeight="SemiBold"
                           Margin="8,6,8,4"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="180" Padding="8,0,8,8">
                    <ListBox x:Name="DetailList" BorderThickness="0" Background="Transparent"
                             Foreground="#cbd5e1" FontFamily="Consolas" FontSize="12"/>
                </ScrollViewer>
            </Grid>
        </Border>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button x:Name="CancelBtn" Content="取消" Style="{StaticResource SecondaryButtonStyle}" Width="80" Padding="8,4" IsCancel="True" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
